@model IEnumerable<MyFirstMVC.Models.Project>
<div class="row">
    <div class="col-md-12">
        <h2 class="">Projelerim</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Anasayfa</a></li>
                <li class="breadcrumb-item active" aria-current="page">Projelerim</li>
            </ol>
        </nav>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card d-block" style="height:380px;">
                        <img src="/images/@item.Photo" class="card-img-top" alt="@item.Title">
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">@item.Description</p>
                            <a href="#" class="btn btn-primary" style="position:absolute;bottom:10px;right:15px;">Ayrıntılar</a>
                        </div>
                    </div>
                </div>
            }
            @if (Model.Count() == 0)
            {
                <div class="col-md-12">
                    <div class="alert alert-danger">Hiç proje yok!</div>
                </div>
            }
        </div>
    </div>

</div>
